<?xml version="1.0" encoding="UTF-8"?>
<Configuration package="log4j.test" status="WARN">
    <CustomLevels>
        <CustomLevel name="VERBOSE" intLevel="450" />
        <CustomLevel name="VERY-VERBOSE" intLevel="475" />
    </CustomLevels>
        
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} : %msg (%C{1}:%L)%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="Console"/>
        </Root>    
        <Logger name="ca.frar.jjjrmi.socket.JJJConfigurator" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>                   
<!--        <Logger name="ca.sharcnet.nerve.services.ServiceBase" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>                             -->
    </Loggers>
</Configuration>