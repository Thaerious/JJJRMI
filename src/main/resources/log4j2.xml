<?xml version="1.0" encoding="UTF-8"?>
<!-- JJJRMI -->
<Configuration package="log4j.test" status="WARN">
    <CustomLevels>
        <CustomLevel name="VERBOSE" intLevel="450" />
        <CustomLevel name="VERY_VERBOSE" intLevel="475" />
    </CustomLevels>        
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">            
            <PatternLayout pattern="JJJ[%level{VERY_VERBOSE=Z, VERBOSE=V, WARN=W, DEBUG=D, ERROR=E, TRACE=T, INFO=I}] %d{HH:mm:ss} : %msg  (%C{1}:%L)%n"/>
            <!--<PatternLayout pattern="JJJ[%level{VERY_VERBOSE=Z, VERBOSE=V, WARN=W, DEBUG=D, ERROR=E, TRACE=T, INFO=I}] %d{HH:mm:ss} : %msg%n"/>-->
            <!--<PatternLayout pattern="JJJ[%level{VERY_VERBOSE=Z, VERBOSE=V, WARN=W, DEBUG=D, ERROR=E, TRACE=T, INFO=I}] : %msg%n"/>-->
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG" >
            <AppenderRef ref="Console"/>
        </Root>  
<!--        <Logger name="ca.frar.jjjrmi.socket.MsgHandler" level="VERBOSE" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>-->
<!--        <Logger name="Encoder" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>      
        <Logger name="Decoder" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>             -->
    </Loggers>
</Configuration>